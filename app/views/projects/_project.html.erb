<tr class="">
	<td>
    <img src="<%= project.avatar_url %>" height='36' width='36' onerror="this.style.display='none'" class="me-3" >
    <%= link_to project, project.url %> 
  </td>

	<td>
    <%= number_to_currency(project.total_allocated / 100.0) %>
	</td>
  <td>
    <%= number_to_human(project.total_downloads, format: '%n%u', units: { thousand: 'K', million: 'M', billion: 'B' }) %>
  </td>
  <td>
    <%= number_to_human(project.total_dependent_repos, format: '%n%u', units: { thousand: 'K', million: 'M', billion: 'B' }) %>
  </td>
  <td>
    <%= number_to_human(project.total_dependent_packages, format: '%n%u', units: { thousand: 'K', million: 'M', billion: 'B' }) %>
  </td>
</tr>

