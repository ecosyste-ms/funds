<% @meta_title = @fund.name %>
<% @meta_description = @fund.description %>

<%= render 'funds/header' %>


<div class="container">
<div class="fund-section-header mb-3 mb-md-5 d-flex justify-content-between align-items-center">
  <h2 class="h1 extra-bold mb-0">
    Projects
  </h2>
</div>
  <div class="row">
    <div class="col-lg-3">
      <p>There are <%= number_with_delimiter @fund.possible_projects.count %> critical projects in the <%= @fund.name %> ecosystem. We have invited <%= @fund.attempted_project_count %> for funding, of which <%= @fund.funded_projects_count %> have accepted.</p>
      <p>Funding invitations are based on the amount of donations available in an allocation. Read more about how ecosyste.ms funding works <a href="<%= overview_path %>" class="spesh-link">in our overview</a></p>
    </div>
    <div class="col-lg-9">
      <div class="table-wrapper table-responsive-lg" role="group" tabindex="0" aria-labelledby="table-caption">
        <figure>
          <table class="table">
          <thead>
            <tr>
              <th>Project</th>
              <th>Amount</th>
              <th>Downloads</th>
              <th>Dependent Repos</th>
              <th>Dependent Packages</th>
            </tr>
          </thead>
          <tbody>
            <%= render @projects %>
          </tbody>
          </table>
        </figure>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
      </div>
    </div>
  </div>
</div>