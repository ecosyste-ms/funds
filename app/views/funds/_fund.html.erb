<div class="col">
  <div class="card" >
    <img src="<%= fund.logo_url %>" class="card-img-top" onerror="this.style.display='none'">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to fund.name, fund_path(fund) %>
      </h5>
      <p class="card-text">
        Distributed: <%= number_to_currency fund.total_distributed_cents/100 %><br/>
        From <%= pluralize fund.total_donors, 'Funder'%><br/>
        To <%= pluralize fund.total_funded_projects, 'Projects' %> 

      </p>
      <%= link_to 'Explore', fund_path(fund), class: 'btn btn-primary' %>
    </div>
  </div>
</div>