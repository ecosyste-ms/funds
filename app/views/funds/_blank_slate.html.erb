<div class="row">
	<div class="col-lg-3">
    <div class="well p-4 mb-5">
      <h2 class="h4 mb-3">Looking for support</h2>
      <p class="small">Weâ€™ve sourced, indexed, and packaged millions of open source packages into curated funds dedicated to supporting the work of the most critical projects in their respective ecosystems</p>
      <p class="small mb-4">Support the maintainers behind the most critical components in the <%= @fund.name %> ecosystem today</p>
      <%= form_with url: setup_fund_path(@fund), method: :post, class: 'd-inline' do %>
        <%= submit_tag "Fund #{@fund.name}", class: 'btn btn-success rounded-pill' %>
      <% end %>
    </div>
	</div>
	<div class="col-lg-9">
    <div class="table-wrapper table-responsive-lg" role="group" tabindex="0" aria-labelledby="table-caption">
      <figure>
        <table class="table">
        <thead>
          <tr>
            <th>Project</th>
            <th>Downloads</th>
            <th>Dependent Repos</th>
            <th>Dependent Packages</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'blank_slate_projects', collection: @projects, as: :project %>
        </tbody>
        </table>
      </figure>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
    </div>
    </div>
</div>